---
import Layout from "../../layouts/Layout.astro";
import ClassSessionCard from "../../components/ClassSessionCard";
import StudentStatCard from "../../components/StudentStatCard";
---

<Layout>
  <div class="pt-6 mx-auto w-fit flex flex-col gap-5">
    <!-- Dashboard Header -->
    <div>
      <div class="text-2xl font-semibold text-gray-900 mb-3">
        Student Course Dashboard
      </div>
      <hr class="border-slate-200" />
    </div>

    <!-- Class Sessions -->
    <div class="flex flex-col gap-4">
      <ClassSessionCard
        client:load
        title="Scientific Computing"
        sessionNumber={10}
        totalSessions={16}
        classCode="LQ01"
        classStartTime="00:00"
        classEndTime="23:59"
        date="Today, June 14"
        duration="1h 40m"
        instructor="Dr. Sarah Chen"
        topic="Advanced Data Structures & Algorithms"
        location="Engineering Building, Room 201"
        classroom="Classroom"
        isOngoing={true}
      />

      <ClassSessionCard
        client:load
        title="Database Systems"
        sessionNumber={5}
        totalSessions={12}
        classCode="LQ01"
        classStartTime="10:00"
        classEndTime="11:30"
        date="Tomorrow, June 15"
        duration="1h 30m"
        instructor="Prof. John Smith"
        topic="SQL Queries and Optimization"
        location="Computer Lab 3"
        classroom="Computer Lab"
        isOngoing={false}
      />
    </div>

    <!-- Student Status -->
    <div class="flex flex-col gap-3">
      <div>
        <div class="text-2xl font-semibold text-gray-900 mb-3">
          Student Status
        </div>
        <hr class="border-slate-200" />
      </div>

      <!-- The polished student stats layout -->
      <div class="flex flex-wrap gap-6 mb-8 justify-center">
        <div class="flex flex-wrap gap-6 justify-center mb-8">
          <div class="flex flex-wrap gap-6 justify-center mb-8">
            <StudentStatCard
              title="Attendance Status"
              status="warning"
              note="2 attendances missing"
            />
            <StudentStatCard
              title="Assessments Due"
              status="critical"
              note="3 assignments remaining"
            />
            <StudentStatCard title="Exam Eligibility" status="complete" note='eligible to Exam' />
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
