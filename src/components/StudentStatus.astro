---
// StudentStatus.astro
// Props interface for type safety
interface Props {
  completed?: number;
  total?: number;
  backgroundColor?: string;
}

// Default values if not provided
const { 
  completed = 150, 
  total = 120, 
  backgroundColor = "#FFE6B9" 
} = Astro.props;
---

<div class="student-status-container">
  <div class="student-status-card">
    <h2 class="student-status-title">Student Activity Transcript</h2>
    <div class="student-status-values">
      <span class="completed-value">{completed}</span>
      <div class="divider"></div>
      <span class="total-value">{total}</span>
    </div>
  </div>
</div>

<style define:vars={{ backgroundColor }}>
  .student-status-container {
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  }

  .student-status-card {
    background-color: white;
    border-radius: 16px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    width: 100%;
    max-width: 320px;
  }

  .student-status-title {
    margin: 0;
    padding: 16px;
    font-size: 18px;
    font-weight: 600;
    text-align: center;
    border-bottom: 1px solid #eee;
  }

  .student-status-values {
    position: relative;
    background-color: var(--backgroundColor);
    padding: 32px 24px;
    min-height: 140px;
    font-weight: bold;
  }

  .completed-value {
    position: absolute;
    top: 20px;
    left: 40px;
    font-size: 48px;
  }

  .total-value {
    position: absolute;
    bottom: 20px;
    right: 40px;
    font-size: 48px;
  }

  .divider {
    margin-top: 130px;
    width: 80%;
    height: 3px;
    background-color: #000;
    transform-origin: top left;
    transform: rotate(-32deg) scaleX(1.15);
    display: flex;
    justify-self: center;
  }
</style>