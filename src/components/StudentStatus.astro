---
// StudentStatus.astro
// Props interface for type safety
interface Props {
  title?: string;
  completed?: number;
  total?: number;
  backgroundColor?: string;
}

// Default values if not provided
const {
  title = "Attendance Status",
  completed = 10,
  total = 10,
  backgroundColor = "#FFE6B9"
} = Astro.props;
---

<div class="flex flex-1 justify-center items-center font-sans"> {/* font-sans is Tailwind's default */}
  <div class="bg-white rounded-2xl border-slate-200 border-solid border-1 overflow-hidden w-full max-w-xs">
    <h2 class="p-4 text-md font-semibold text-center text-nowrap border-b border-gray-200">
      {title}
    </h2>
    <div
      class="bg-orange-100 p-2 flex justify-center items-center"
    >
      <div class="flex flex-col items-center justify-center text-center">
        <span class="text-3xl font-bold">{completed}</span>
        <div class="text-md mt-2">Out of {total}</div>
      </div>
    </div>
  </div>
</div>

