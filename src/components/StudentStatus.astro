---
// StudentStatus.astro
// Props interface for type safety
interface Props {
  title?: string;
  completed?: number;
  total?: number;
  backgroundColor?: string;
}

// Default values if not provided
const {
  title = "Attendance Status",
  completed = 10,
  total = 10,
  backgroundColor = "#FFE6B9"
} = Astro.props;
---

<div class="flex flex-1 justify-center items-center font-sans"> {/* font-sans is Tailwind's default */}
  <div class="bg-white rounded-2xl shadow-[0_4px_8px_rgba(0,0,0,0.1)] overflow-hidden w-full max-w-xs">
    <h2 class="m-0 p-4 text-lg font-semibold text-center border-b border-gray-200">
      {title}
    </h2>
    <div
      class="bg-orange-100 p-6 min-h-[140px] flex justify-center items-center"
    >
      <div class="flex flex-col items-center justify-center text-center">
        <span class="text-[56px] font-bold leading-[1.2]">{completed}</span>
        <div class="text-lg font-bold mt-2">Out of {total}</div>
      </div>
    </div>
  </div>
</div>

