      postDate="18 March 2025"
      replyCount={69}
    /> -->

<div class="forum-post">
  <div class="post-header">
    <div class="post-info">
      {courseCode} - {professorName}
    </div>
    
    <h2 class="post-title">{postTitle}</h2>
    
    <div class="post-date">
      {postDate}
    </div>
  </div>
  
  <div class="post-footer">
    <div class="reply-count">
      {replyCount} Replies
    </div>
  </div>
</div>

<style>
  .forum-post {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    max-width: 900px;
    border-radius: 20px;
    overflow: hidden;
    background-color: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .post-header {
    padding: 20px 24px;
    background-color: white;
  }

  .post-info {
    font-size: 1rem;
    margin-bottom: 8px;
    color: #000;
  }

  .post-title {
    font-size: 1.4rem;
    font-weight: 600;
    margin: 0 0 12px 0;
    color: #000;
    line-height: 1.3;
  }

  .post-date {
    font-size: 0.95rem;
    color: #000;
  }

  .post-footer {
    padding: 16px 24px;
    background-color: #f2f2f2;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
  }

  .reply-count {
    font-size: 0.95rem;
    color: #000;
  }
</style>