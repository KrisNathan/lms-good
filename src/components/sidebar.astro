</aside>

<style>
  .sidebar {
    width: 240px;
    height: 100vh;
    border-right: 1px solid #e5e7eb;
    background-color: white;
  }
  
  .sidebar-nav {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .sidebar-item {
    margin: 0;
  }
  
  .sidebar-link {
    display: flex;
    align-items: center;
    padding: 12px 16px;
    color: #4b5563;
    text-decoration: none;
    transition: background-color 0.2s;
  }
  
  .sidebar-link:hover {
    background-color: #f3f4f6;
  }
  
  .icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    margin-right: 12px;
    color: #6b7280;
  }
  
  .text {
    font-size: 16px;
    font-weight: 500;
  }
  
  .sidebar-section .section-header {
    display: flex;
    align-items: center;
    padding: 12px 16px;
    color: #4b5563;
    cursor: pointer;
  }
  
  .section-icon {
    margin-right: 8px;  
    width: 16px;
    height: 16px;
  }
  
  .section-icon.expanded {
    display: none;
  }
  
  .sidebar-section.expanded .section-icon.collapsed {
    display: none;
  }
  
  .sidebar-section.expanded .section-icon.expanded {
    display: block;
  }
  
  .section-items {
    list-style: none;
    padding: 0;
    margin: 0;
    display: none;
  }
  
  .sidebar-section.expanded .section-items {
    display: block;
  }
  
  /* Show section items for demo */
  .section-items {
    display: block;
  }
  
  .active {
    background-color: #f0f9ff;
  }
  
  .active .sidebar-link {
    color: #0284c7;
  }
  
  .avatar {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    background-color: #0891b2;
    color: white;
    border-radius: 50%;
    font-weight: 500;
  }
</style>

<script>
  // Client-side JavaScript to handle the sidebar section toggling
  document.addEventListener('DOMContentLoaded', () => {
    const sectionHeaders = document.querySelectorAll('.section-header');
    
    sectionHeaders.forEach(header => {
      header.addEventListener('click', () => {
        const section = header.closest('.sidebar-section');
        section.classList.toggle('expanded');
      });
    });
  });
</script>