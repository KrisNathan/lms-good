---
// ForumPostCard.astro
interface Props {
  courseCode: string;
  professorName: string;
  professorTitle: string;
  postTitle: string;
  postDate: string;
  replyCount: number;
}

const { courseCode, professorName, professorTitle, postTitle, postDate, replyCount } = Astro.props;
---
<a href="/course/course123/">
  <div class="forum-post-card" >
    <div class="post-header">
      <span class="course-code">{courseCode}</span>
      <span class="separator">-</span>
      <span class="professor">Prof. {professorName}, {professorTitle}</span>
    </div>
    
    <h2 class="post-title">{postTitle}</h2>
    
    <div class="post-date">{postDate}</div>
    
    <div class="post-footer">
      <div class="reply-count">{replyCount} {replyCount === 1 ? 'Reply' : 'Replies'}</div>
    </div>
  </div>
</a>
<style>
  .forum-post-card {
    background-color: #ffffff;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    max-width: 100%;
    display: flex;
    flex-direction: column;
  }

  .post-header {
    padding: 16px 20px;
    font-size: 0.9rem;
    color: #333;
  }

  .course-code {
    font-weight: 500;
  }

  .separator {
    margin: 0 6px;
  }

  .professor {
    font-weight: normal;
  }

  .post-title {
    padding: 0 20px;
    margin: 0 0 8px 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: #111;
  }

  .post-date {
    padding: 0 20px 16px 20px;
    font-size: 0.9rem;
    color: #555;
  }

  .post-footer {
    background-color: #eee;
    padding: 12px 20px;
    margin-top: auto;
  }

  .reply-count {
    font-size: 0.9rem;
    font-weight: 500;
    color: #333;
  }
</style>