<div class="classroom-container">
  <!-- Sidebar -->
  <aside class="sidebar" id="sidebar">
    <nav class="sidebar-nav">
      <ul>
        <li class="sidebar-item active">
          <a href="#" aria-label="Home">
            <img src=/home.png alt="Home" width="24" height="24" />
            <span class="sidebar-text">Home</span>
          </a>
        </li>
        <li class="sidebar-item">
          <a href="#" aria-label="Calendar">
            <img src="/calendar.png" alt="Calendar" width="24" height="24" />
            <span class="sidebar-text">Calendar</span>
          </a>
        </li>
        <li class="sidebar-item">
          <a href="#" aria-label="Assignments">
            <img src="/assignment-icon.png" alt="Assignments" width="24" height="24" />
            <span class="sidebar-text">Assignments</span>
          </a>
        </li>
        <li class="sidebar-item">
          <a href="#" aria-label="Settings">
            <img src="/setting-icon.png" alt="Settings" width="24" height="24" />
            <span class="sidebar-text">Settings</span>
          </a>
        </li>
      </ul>
    </nav>
  </aside>

  <div class="content-area">
    <header class="top-navbar">
      <div class="navbar-left">
        <button class="menu-toggle" aria-label="Toggle Menu" id="menu-toggle">
          <span></span><span></span><span></span>
        </button>
        <div class="app-logo">
          <img src="/trash.png" alt="Classroom" width="24" height="24" />
          <span>Bad LMS</span>
        </div>
      </div>
      <div class="navbar-right">
        <button class="create-button" aria-label="Create">
          <span>+</span>
        </button>
        <div class="user-profile">
          <img src="/user-icon.png" alt="User Profile" width="32" height="32" />
        </div>
      </div>
    </header>

    <main class="main-content">
      <slot />
    </main>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuToggle = document.getElementById('menu-toggle');
    const sidebar = document.getElementById('sidebar');
    
    menuToggle.addEventListener('click', () => {
      sidebar.classList.toggle('expanded');
      document.querySelector('.content-area').classList.toggle('sidebar-expanded');
    });
  });
</script>

<style>
  .classroom-container {
    display: flex;
    height: 100vh;
    width: 100%;
    font-family: 'Google Sans', Roboto, Arial, sans-serif;
  }

  .sidebar {
    width: 64px;
    background-color: #fff;
    border-right: 1px solid #e0e0e0;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 100;
    transition: width 0.3s ease;
    overflow: hidden;
  }
  
  .sidebar.expanded {
    width: 240px;
  }

  .sidebar-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .sidebar-item {
    width: 100%;
    height: 64px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .sidebar-item a {
    display: flex;
    align-items: center;
    width: 100%;
    height: 100%;
    color: #5f6368;
    text-decoration: none;
    padding: 0 20px;
  }
  
  .sidebar-item img {
    margin: 0 auto;
    transition: margin 0.3s ease;
  }
  
  .sidebar.expanded .sidebar-item a {
    justify-content: flex-start;
  }
  
  .sidebar.expanded .sidebar-item img {
    margin: 0 16px 0 0;
  }

  .sidebar-text {
    display: none;
    white-space: nowrap;
    opacity: 0;
    transition: opacity 0.3s ease;
    font-size: 14px;
    font-weight: 500;
  }
  
  .sidebar.expanded .sidebar-text {
    display: block;
    opacity: 1;
  }

  .sidebar-item.active {
    border-left: 4px solid #1a73e8;
  }

  .sidebar-item.active a {
    color: #1a73e8;
  }

  .top-navbar {
    height: 64px;
    background-color: #fff;
    border-bottom: 1px solid #e0e0e0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 16px;
    position: fixed;
    top: 0;
    left: 64px;
    right: 0;
    z-index: 99;
    transition: left 0.3s ease;
  }
  
  .content-area {
    transition: margin-left 0.3s ease;
  }
  
  .content-area.sidebar-expanded .top-navbar {
    left: 240px;
  }

  .navbar-left {
    display: flex;
    align-items: center;
  }

  .menu-toggle {
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 18px;
    margin-right: 16px;
    padding: 0;
  }

  .menu-toggle span {
    background-color: #5f6368;
    height: 2px;
    width: 18px;
    display: block;
  }

  .app-logo {
    display: flex;
    align-items: center;
    font-size: 18px;
    font-weight: 500;
    color: #5f6368;
  }

  .app-logo img {
    margin-right: 8px;
  }

  .navbar-right {
    display: flex;
    align-items: center;
  }

  .create-button {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background-color: #1a73e8;
    color: white;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    margin-right: 16px;
    cursor: pointer;
  }

  .user-profile {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    overflow: hidden;
    cursor: pointer;
  }

  .main-content {
    margin-left: 64px;
    margin-top: 64px;
    padding: 24px;
    width: calc(100% - 64px);
    height: calc(100vh - 64px);
    overflow-y: auto;
    transition: margin-left 0.3s ease, width 0.3s ease;
  }
  
  .content-area.sidebar-expanded .main-content {
    margin-left: 240px;
    width: calc(100% - 240px);
  }
</style>