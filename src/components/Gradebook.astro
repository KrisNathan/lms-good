---
// GradeSummary.astro
// This component displays a student's grade summary with assessment breakdown
// For prototyping purposes, it contains static dummy data

// The component's props interface (optional for prototyping)
interface Props {
  // No props needed for prototype as we're using static content
}

// Static dummy data for prototyping
const title = "Final Score";
const lastUpdated = "27 Apr 2025, 07:59 GMT+7";
const totalWeight = 100;
const totalScore = "N/A";
const totalGrade = "N/A";

const gradeItems = [
  {
    name: "THEORY: ASSIGNMENT",
    weight: 20,
    score: "95",
    lastUpdated: "23 May 2025, 17:59 GMT+7"
  },
  {
    name: "THEORY: MID EXAM",
    weight: 30,
    score: 100,
    lastUpdated: "27 Apr 2025, 07:59 GMT+7"
  },
  {
    name: "THEORY: FINAL PROJECT",
    weight: 50,
    score: "N/A"
  }
];

// Destructure any passed props (empty for prototype)
const {} = Astro.props;
---

<div class="page-container">
  <div class="grade-summary">
    <div class="header">
      <div class="title-section">
        <h2>{title}</h2>
        {lastUpdated && <p class="last-updated">Last updated: {lastUpdated}</p>}
      </div>
      <div class="summary-stats">
        <div class="stat">
          <span class="label">Weight</span>
          <span class="value">{totalWeight}%</span>
        </div>
        <div class="stat">
          <span class="label">Score</span>
          <span class="value score">{totalScore}</span>
        </div>
        <div class="stat">
          <span class="label">Grade</span>
          <span class="value grade">{totalGrade}</span>
        </div>
      </div>
    </div>

    <div class="grade-items">
      {gradeItems.map((item) => (
        <div class="grade-item">
          <div class="grade-item-name">{item.name}</div>
          {item.lastUpdated && <div class="grade-item-date">Last updated: {item.lastUpdated}</div>}
          <div class="grade-item-weight">{item.weight}%</div>
          <div class="grade-item-score">{item.score}</div>
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .page-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    padding: 1rem;
  }

  .grade-summary {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 800px;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    background-color: #6c63ff;
    color: white;
  }

  .title-section h2 {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .last-updated {
    margin: 0.25rem 0 0;
    font-size: 0.8rem;
    opacity: 0.8;
  }

  .summary-stats {
    display: flex;
    gap: 2rem;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .label {
    font-size: 0.9rem;
    opacity: 0.9;
  }

  .value {
    font-size: 1.5rem;
    font-weight: 600;
  }

  .grade-items {
    background-color: white;
  }

  .grade-item {
    display: grid;
    grid-template-columns: 1fr 80px 80px;
    grid-template-areas:
      "name weight score"
      "date weight score";
    padding: 1rem 1.5rem;
    border-bottom: 1px solid #eaeaea;
  }

  .grade-item:last-child {
    border-bottom: none;
  }

  .grade-item-name {
    grid-area: name;
    font-weight: 500;
    color: #333;
  }

  .grade-item-date {
    grid-area: date;
    font-size: 0.8rem;
    color: #777;
    margin-top: 0.25rem;
  }

  .grade-item-weight {
    grid-area: weight;
    font-weight: 500;
    background-color: #f2f2f2;
    border-radius: 1rem;
    padding: 0.25rem 0.75rem;
    width: 50px;
    text-align: center;
    justify-self: center;
    align-self: center;
  }

  .grade-item-score {
    grid-area: score;
    font-weight: 600;
    font-size: 1.25rem;
    justify-self: center;
    align-self: center;
  }
</style>